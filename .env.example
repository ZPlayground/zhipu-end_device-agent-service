# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用基础配置
APP_NAME=A2A Agent Service
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./data/a2a_agent.db
# 生产环境推荐使用 PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis配置（必需）
REDIS_URL=redis://localhost:6379

# 安全配置（必需修改）
SECRET_KEY=PLEASE-CHANGE-THIS-SECRET-KEY-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# A2A配置
A2A_WEBHOOK_SECRET=PLEASE-CHANGE-THIS-WEBHOOK-SECRET-IN-PRODUCTION
A2A_BASE_URL=http://localhost:8000

# API密钥配置（可选，但推荐配置以启用LLM功能）
# OpenAI API Key (用于GPT模型)
OPENAI_API_KEY=your-openai-api-key-here

# 智谱AI API Key (用于GLM模型)
ZHIPU_API_KEY=your-zhipu-api-key-here

# 模型配置
ENABLE_GPT5_PREVIEW=false
OPENAI_CHAT_MODEL=gpt-4
OPENAI_INTENT_MODEL=gpt-4

# MCP测试服务配置
MCP_TEST_HOST=localhost
MCP_TEST_PORT=9001

# Agent配置（高级配置，可选）
AGENT_AUTOGLM_AGENT_URL=http://8.141.113.229
AGENT_DEFAULT_WORKER_COUNT=4
AGENT_WORKER_CONCURRENCY=3

# 日志配置
LOG_LEVEL=INFO

# Docker环境标识（在Docker中运行时自动设置）
DOCKER_ENV=false

# 日志配置
LOG_LEVEL=INFO
